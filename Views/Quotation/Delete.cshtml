@model QuotationSys.Models.Quotation

@{
    ViewData["Title"] = "Delete Quotation";
}

<h1>Delete Quotation</h1>

<h3>Are you sure you want to delete this quotation?</h3>
<div>
    <h4>Quotation</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Customer</dt>
        <dd class="col-sm-10">@Model.Customer.CompanyName</dd>

        <dt class="col-sm-2">Created At</dt>
        <dd class="col-sm-10">@Model.CreatedAt.ToString("dd/MM/yyyy")</dd>

        <dt class="col-sm-2">Status</dt>
        <dd class="col-sm-10">@Model.Status</dd>
    </dl>
</div>

<h4>Quotation Items</h4>
<table class="table table-striped">
    <thead>
    <tr>
        <th>Product</th>
        <th>Description</th>
        <th>Quantity</th>
        <th>Unit Price</th>
        <th>Total</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model.QuotationItems)
    {
        <tr>
            <td>@item.Product?.Name</td>
            <td>@item.Description</td>
            <td>@item.Quantity</td>
            <td>@item.UnitPrice.ToString("C")</td>
            <td>@(item.Quantity * item.UnitPrice).ToString("C")</td>
        </tr>
    }
    </tbody>
</table>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="QuotationId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>